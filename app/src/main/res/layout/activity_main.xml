<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:weightSum="7.0"
    tools:context=".dashboard.MainActivity">
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo3"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_marginStart="@dimen/margin_250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/margin_250dp" />
    <TextView
        android:id="@+id/label_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/text_services"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/font_size_25sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_80dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/padding_10dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline1"
            android:layout_marginLeft="@dimen/margin_20dp">
        <Button
            android:id="@+id/btnDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/icon_deposite"
            android:gravity="center"
            android:text="@string/text_button_deposit"
            android:layout_marginEnd="210dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnWithdraw"
            android:layout_marginRight="16dp" />

        <Button
            android:id="@+id/btnWithdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/icon_withdraw"
            android:gravity="center"
            android:text="@string/text_button_withdraw"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/btnMini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnDeposit"
            android:layout_marginRight="16dp" />

        <Button
            android:id="@+id/btnMini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/icon_mini_statement"
            android:gravity="center"
            android:text="@string/text_mini_statement"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/btnBalanceEnquirey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnWithdraw"
            android:layout_marginRight="100dp" />

        <Button
            android:id="@+id/btnBalanceEnquirey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/icon_balance"
            android:gravity="center"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="8dp"
            android:text="@string/text_button_balance_enquirey"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnMini"
            android:layout_marginRight="190dp" />
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="start"
                app:constraint_referenced_ids="btnDeposit,btnWithdraw,btnMini,btnBalanceEnquirey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            app:layout_constraintTop_toBottomOf="@id/guideline1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/margin_20dp">

        <Button
            android:id="@+id/btnPinChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableRight="@drawable/icon_pin_change"
            android:gravity="center"
            android:text="@string/text_button_pin_change"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnTransfer"
            app:layout_constraintTop_toTopOf="@id/constraintLayout2"
            android:layout_marginLeft="@dimen/margin_250dp" />

        <Button
            android:id="@+id/btnTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableRight="@drawable/icon_transfer"
            android:gravity="center"
            android:text="@string/text_button_transfer"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_250dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/btnOthers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPinChange"
            android:layout_marginLeft="@dimen/margin_250dp" />

        <Button
            android:id="@+id/btnOthers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableRight="@drawable/icon_others"
            android:layout_marginStart="@dimen/margin_250dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/text_button_other"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/btnCancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnTransfer"
            android:layout_marginLeft="@dimen/margin_250dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:drawableRight="@drawable/icon_transfer"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_250dp"
            android:layout_marginBottom="8dp"
            android:text="@string/text_button_exit"
            android:textColor="@color/colorLightWhite"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnOthers"
            android:layout_marginLeft="@dimen/margin_250dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>








    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>