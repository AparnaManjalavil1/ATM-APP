<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
   <androidx.constraintlayout.widget.ConstraintLayout
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@drawable/low_bottom_background"
   tools:context=".readpinnumber.PinNumberActivity"
       >
       <ImageView
           android:id="@+id/logo_image"
           android:layout_width="@dimen/margin_0dp"
           android:layout_height="wrap_content"
           android:src="@drawable/logo3"
           android:layout_marginStart="@dimen/margin_40dp"
           android:layout_marginTop="@dimen/margin_40dp"
           app:layout_constraintBottom_toTopOf="@id/enter_your_pin_number"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginLeft="@dimen/margin_40dp" />

       <TextView
        android:id="@+id/enter_your_pin_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_pin_number"
        android:gravity="center_horizontal"
           android:textStyle="bold"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/font_size_25sp"
           android:layout_marginTop="@dimen/margin_80dp"
           android:layout_marginBottom="@dimen/margin_16dp"
        app:layout_constraintBottom_toTopOf="@id/pin_number_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_image" />

       <LinearLayout
           android:id="@+id/pin_number_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="@dimen/padding_30dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="1.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/enter_your_pin_number">

           <EditText
               android:id="@+id/firstDigit"
               android:layout_width="45dp"
               android:layout_height="49dp"
               android:layout_margin="@dimen/margin_16dp"
               android:background="@drawable/round_corners_edit_text"
               android:inputType="numberPassword"
               android:maxLength="1"
               android:textCursorDrawable="@drawable/cursor_color"
               android:gravity="center"
               />

           <EditText
               android:id="@+id/secondDigit"
               android:layout_width="45dp"
               android:layout_height="49dp"
               android:layout_margin="@dimen/margin_16dp"
               android:background="@drawable/round_corners_edit_text"
               android:inputType="numberPassword"
               android:maxLength="1"
               android:textCursorDrawable="@drawable/cursor_color"
               android:gravity="center"/>

           <EditText
               android:id="@+id/thirdDigit"
               android:layout_width="45dp"
               android:layout_height="49dp"
               android:layout_margin="@dimen/margin_16dp"
               android:background="@drawable/round_corners_edit_text"
               android:inputType="numberPassword"
               android:textCursorDrawable="@drawable/cursor_color"
                android:maxLength="1"
               android:gravity="center"/>

           <EditText
               android:id="@+id/fourthDigit"
               android:layout_width="45dp"
               android:layout_height="49dp"
               android:layout_margin="@dimen/margin_16dp"
               android:background="@drawable/round_corners_edit_text"
               android:inputType="numberPassword"
               android:maxLength="1"
               android:textCursorDrawable="@drawable/cursor_color"
               android:gravity="center"/>

       </LinearLayout>


   </androidx.constraintlayout.widget.ConstraintLayout>

</layout>